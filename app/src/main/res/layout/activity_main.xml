<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="60dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/welcome_to_checklist"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_a_task"
            android:textSize="16dp"
            android:id="@+id/btnAdd"
            android:onClick="btnAddOnclick"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all_due_tasks"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/btnDueTasks"
            android:onClick="btnDueOnclick"
            />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_task_status"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:id="@+id/btnChangeStatusBtn"
        android:onClick="btnChangeStatusOnclick"
        />
</LinearLayout>